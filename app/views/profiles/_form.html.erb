<%= form_for @profile, html: { multipart: true } do |f| %>

<div class="form-group">
    <%= f.bootstrap_text_field :nom %>
  </div>
  <div class="form-group">
    <%= f.bootstrap_text_field :prenom %>
  </div>

  <div class="form-group">

  <%= f.bootstrap_text_field :dob , {class:""} %>

</div>



  <div class="form-group">
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </div>
  <% if @profile.avatar? %>
    <%= image_tag @profile.avatar.thumb.url, class: "", style: "" %>
    <%= link_to "Effacer", delete_image_profile_path(@profile),method: :delete, data: { confirm: "Are you sure?" }%>
  <% end %>

  <div class="form-group">
    <%= f.bootstrap_text_area :address %>
  </div>
  <div class="form-group">
    <%= f.bootstrap_text_area :about %>
  </div>
  <div class="actions">
    <%= link_to 'Cancel', profiles_path, class: "btn btn-default" %>
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>



<script type="text/javascript">


  $('#profile_dob').datepicker({
      format: "dd/mm/yyyy",
      autoclose: true,
      todayHighlight: true
  });

</script>
